<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/mystyle.css")
    @Styles.Render("~/Content/slider.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/autoslider.css")
    @Styles.Render("https://www.w3schools.com/w3css/4/w3.css")
    @Styles.Render(" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Header -->
    <div class="allcontain">
        <div class="header">
            <ul class="socialicon">
                <li><a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a></li>
                <li><a href="https://twitter.com/"><i class="fa fa-twitter"></i></a></li>
                <li><a href="https://www.instagram.com/"><i class="fa fa-instagram"></i></a></li>
                <li><a href="https://www.linkedin.com/"><i class="fa fa-linkedin"></i></a></li>
            </ul>
            <ul class="givusacall">
                <li>Give us a call : +6666666666 </li>
            </ul>
            <ul class="logreg">
                <li>@Html.ActionLink("FEEDBACK", "Create", "FeedBacks")</li>

            </ul>
        </div>
        <!-- Navbar Up -->
        <nav class="topnavbar navbar-default topnav">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed toggle-costume" data-toggle="collapse" data-target="#upmenu" aria-expanded="false">
                        <span class="sr-only"> Toggle navigaion</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand logo"><img src="~/Resources/logo1.png" alt="logo"></a>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="upmenu">
                <ul class="nav navbar-nav" id="navbarontop">
                    <li class="active">@Html.ActionLink("HOME", "Index", "Home") </li>
                    <li class="dropdown1">
                        <a href="javascript:void(0)" class="dropbtn1">MAKES <span class="caret"></span></a>
                        <div class="dropdown1-content">
                            @Html.ActionLink("BMW", "BMW", "Home")
                            @Html.ActionLink("MERC", "MERC", "Home")
                            @Html.ActionLink("AUDI", "AUDI", "Home")



                        </div>
                    </li>

                    <li>
                        @Html.ActionLink("ABOUT US", "About", "Home")

                    </li>
                    <li>
                        @Html.ActionLink("CONTACT", "Contact", "Home")

                    </li>
                    <li>
                        @Html.ActionLink("ALL  REVIEWS", "Index", "Reviews")
                    </li>





                </ul>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>

    <!--  bottom menu -->

    <div class="bottommenu">

        <img src="~/Resources/line.png" alt="line"> <br>
        <div class="bottomsocial">
            <a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
            <a href="https://twitter.com/"><i class="fa fa-twitter"></i></a>
            <a href="https://www.instagram.com/"><i class="fa fa-instagram"></i></a>
            <a href="https://www.linkedin.com/"><i class="fa fa-linkedin"></i></a>
        </div>
        <div class="footer">
            <div class="copyright">
                &copy; Copyright 2019.
            </div>
            <div class="atisda">
                Designed by Group4.
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap.js")
    @Scripts.Render("~/bundles/myscript.js")
    @Scripts.Render("~/bundles/jquery.js")
    @Scripts.Render("~/bundles/isotope.js")
    @Scripts.Render("~/Scripts/autoslider.js")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</body>
</html>
